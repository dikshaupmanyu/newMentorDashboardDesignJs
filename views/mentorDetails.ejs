<script type="text/javascript">


  var sData = localStorage.getItem('allTokenData');
  var storageData= JSON.parse(sData);
  var LoggedInId = storageData.uid;

  var tokens = storageData.tokendata;

  var tipIds = "<%=tipsIds%>";

  // alert(tipIds);

  var formdata = {tipId: tipIds};
